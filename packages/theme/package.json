{
  "name": "@charcoal-ui/theme",
  "version": "2.3.0",
  "license": "Apache-2.0",
  "type": "module",
  "source": "./src/index.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.module.js",
  "exports": {
    "require": "./dist/index.cjs",
    "default": "./dist/index.modern.js"
  },
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build": "microbundle --compress=false -f modern,esm,cjs --tsconfig tsconfig.build.json && yarn serialize",
    "typecheck": "tsc --noEmit --project tsconfig.build.json && yarn typecheck:cli",
    "typecheck:cli": "tsc --noEmit --project cli/tsconfig.build.json",
    "clean": "rimraf dist",
    "serialize": "node cli/index.js"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.1",
    "microbundle": "^0.14.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@charcoal-ui/foundation": "^2.3.0",
    "@charcoal-ui/utils": "^2.3.0",
    "polished": "^4.1.4"
  },
  "files": [
    "src",
    "dist",
    "theme.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pixiv/charcoal.git",
    "directory": "packages/theme"
  }
}
